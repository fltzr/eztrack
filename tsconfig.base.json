{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/api/auth": ["libs/api-auth/src/index.ts"],
      "@/api/core": ["libs/api-core/src/index.ts"],
      "@/api/courtreserve": ["libs/api-courtreserve/src/index.ts"],
      "@/api/finances": ["libs/api-finances/src/index.ts"],
      "@/api/notifications": ["libs/api-notifications/src/index.ts"],
      "@/shared/api-types": ["libs/shared-api-types/src/index.ts"],
      "@/shared/types": ["libs/shared-types/src/index.ts"],
      "@/web/auth": ["libs/web-auth/src/index.ts"],
      "@/web/courtreserve": ["libs/web-courtreserve-main/src/index.ts"],
      "@/web/finances-main": ["libs/web-finances-main/src/index.ts"],
      "@/web/form": ["libs/web-shared-form/src/index.ts"],
      "@/web/state-management": ["libs/web-shared-state-management/src/index.ts"],
      "@/web/types": ["libs/web-shared-types/src/index.ts"],
      "@/web/ui": ["libs/web-shared-ui/src/index.ts"],
      "@/web/utils": ["libs/web-shared-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
